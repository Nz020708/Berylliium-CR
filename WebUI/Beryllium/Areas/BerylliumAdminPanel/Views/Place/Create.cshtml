@using Beryllium.ViewModels.Place

@model PlaceCreateVM
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Form</h4>

            <form class="forms-sample" method="post">
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-3 col-form-label">New Place</label>
                    <div class="col-sm-9">
                        <input asp-for="Name" type="text" class="form-control" name="Name" placeholder="Enter the name of place...">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light" asp-action="Index">Cancel</button>
            </form>
        </div>
    </div>
</div>
